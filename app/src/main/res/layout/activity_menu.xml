<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/planodefundo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anderson.webcoleta.MenuActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/botaoLista"
        android:background="@drawable/botao"
        android:layout_width="113dp"
        android:layout_height="103dp"
        android:text="Lista"
        android:onClick="listarPontosColeta"
        android:layout_above="@+id/botaoBusca"
        android:layout_alignParentStart="true"
        android:layout_marginStart="130dp"
        android:layout_marginBottom="25dp" />

    <Button
        android:id="@+id/botaoBusca"
        android:background="@drawable/botao"
        android:layout_width="123dp"
        android:layout_height="103dp"
        android:text="Busca"
        android:onClick="buscarPontosColeta"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/botaoLista"
        android:layout_marginBottom="150dp" />

</RelativeLayout>
