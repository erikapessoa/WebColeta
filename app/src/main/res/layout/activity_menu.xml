<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@drawable/planodefundo"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.anderson.webcoleta.MenuActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/botaoLista"
        android:background="@drawable/botao"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="Lista"
        android:textColor="@color/colorSnow"

        android:textSize="40dp"
        android:onClick="listarPontosColeta"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/botaoBusca"
        android:background="@drawable/botao"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="Busca"
        android:textColor="@color/colorSnow"
        android:textSize="40dp"
        android:onClick="buscarPontosColeta"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
