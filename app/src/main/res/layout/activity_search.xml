<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/planodefundo"
    tools:context="com.example.anderson.webcoleta.MenuActivity"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="90dp"
        android:textSize="15pt"
        android:textColor="@color/colorSnow"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Turno"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/spinner1"
        android:layout_alignParentStart="true"/>

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:padding="15dp"
        android:background="@drawable/barraseta"
        android:layout_marginRight="58dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2" />




    <TextView
        android:id="@+id/textView2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="Setor"
        android:textStyle="bold"
        android:textSize="15pt"
        android:textColor="@color/colorSnow"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/spinner2"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="300dp"
        android:padding="15dp"
        android:layout_height="100dp"
        android:background="@drawable/barraseta"
        android:layout_marginTop="1dp"
        android:layout_below="@+id/spinner1"
        android:layout_alignStart="@+id/spinner1"
        android:layout_alignEnd="@+id/spinner1" />

</RelativeLayout>